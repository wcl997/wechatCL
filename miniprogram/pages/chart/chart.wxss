@import "./chart.skeleton.wxss";
.chart_nav{
  height: 60rpx;
  background-color: #e4393c;
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.select_date{
  margin-right: auto;
  width: calc(100% - 240rpx);
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding:0 30rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
  color: #444;
  font-size: 28rpx;
}

.date_type{
  width: 160rpx;
  height: 60rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #444;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.type_nav{
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
}
.type_nav_item{
  flex: 1;
  display: flex;
}

.type_nav_title{
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
  color: #666;
}


.active-sr{
  color: #e4393c;
}

.active-zc{
  color: rgb(36,157,98);
}

.pie_box{
  margin-top: 20rpx;
  height: 750rpx;
  background-color: #fff;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.type_data{
  margin-top: 20rpx;
}